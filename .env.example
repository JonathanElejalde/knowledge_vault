# Database
DB_USERNAME=
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pomodoro_db
DATABASE_ECHO=false

# Application Configuration
ENVIRONMENT=development

# Auth (generate with: openssl rand -hex 32)
SECRET_KEY=
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# AI
OPENAI_API_KEY=

# Frontend + Extension (single .env at repo root; Vite and extension build script both read it)
# Backend API base URL (e.g. https://api.yourdomain.com/api/v1)
VITE_API_URL=http://localhost:8000/api/v1
# Web app origin (e.g. https://app.yourdomain.com). Frontend can use; extension uses for "Open notes".
VITE_APP_BASE_URL=http://localhost:5173

# CORS
ALLOWED_ORIGINS=["https://yourdomain.com"]
ALLOWED_EXTENSION_ORIGINS=["chrome-extension://your_extension_id"]
ALLOW_CREDENTIALS=true

# Auth
COOKIE_SECURE=true
COOKIE_SAMESITE=lax

# Docs
ENABLE_DOCS=false

# Trusted proxy IPs (comma-separated). Only when the direct connection is from
# one of these do we trust X-Forwarded-For. Leave empty if not behind a proxy.
# Example for local nginx: TRUSTED_PROXY_IPS=127.0.0.1,::1
TRUSTED_PROXY_IPS=
